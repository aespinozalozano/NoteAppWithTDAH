<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    tools:context=".ui.Fragment.CreateNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/edTittle"
            android:background="@drawable/edit_txt_shape"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Título..."
            android:padding="15dp"
            android:maxLines="1"
            android:textColorHint="#D1D1D1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/edSubTittle"
            android:background="@drawable/edit_txt_shape"
            android:fontFamily="@font/sf_pro_display_medium"
            android:hint="Subtítulo..."
            android:padding="15dp"
            android:maxLines="1"
            android:textColorHint="#D1D1D1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_add_24"
                android:background="@drawable/green_dot" />

            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/yelllow_dot" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pRed"
                android:layout_marginStart="20dp"
                android:background="@drawable/red_dot"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:id="@+id/edNotes"
            android:background="@drawable/edit_txt_shape"
            android:fontFamily="@font/sf_pro_display_medium"
            android:gravity="start"
            android:padding="15dp"
            android:textColorHint="#D1D1D1"
            android:hint="Notas..."/>


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSavedNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp"
        android:src="@drawable/baseline_check_24"
        app:backgroundTint="@color/blueBtn"
        tools:ignore="SpeakableTextPresentCheck" />

</FrameLayout>